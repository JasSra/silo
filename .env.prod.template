# Production Environment - DO NOT COMMIT ACTUAL VALUES
# Copy to .env.prod and set real values

MINIO_ROOT_USER=your-prod-minio-user
MINIO_ROOT_PASSWORD=your-secure-minio-password
MINIO_BROWSER_URL=https://minio.yourdomain.com

POSTGRES_DB=silo
POSTGRES_USER=silo_prod
POSTGRES_PASSWORD=your-secure-postgres-password

OPENSEARCH_ADMIN_PASSWORD=your-secure-opensearch-password

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
SILO_API_BASE_URL=https://api.yourdomain.com
SILO_MINIO_ENDPOINT=http://minio:9000
SILO_OPENSEARCH_ENDPOINT=http://opensearch-node1:9200
SILO_REDIS_CONNECTION=redis:6379
SILO_POSTGRES_CONNECTION="Host=postgres;Port=5432;Database=silo;Username=silo_prod;Password=your-secure-postgres-password"

# Security Settings
JWT_SECRET=your-256-bit-secret-key-here
JWT_ISSUER=https://yourdomain.com
JWT_AUDIENCE=https://api.yourdomain.com

# Hangfire Settings
HANGFIRE_DASHBOARD_ENABLED=false
HANGFIRE_DASHBOARD_PATH=/admin/hangfire

# File Processing Settings
SILO_MAX_FILE_SIZE=1GB
SILO_ALLOWED_EXTENSIONS=.txt,.pdf,.docx,.xlsx,.pptx,.jpg,.jpeg,.png,.gif,.mp4,.mp3,.zip,.rar,.7z
SILO_SCAN_TIMEOUT=60
SILO_PROCESSING_THREADS=8

# Backup Settings
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Monitoring and Logging
SERILOG_LEVEL=Warning
SERILOG_WRITE_TO_OPENSEARCH=true
HEALTH_CHECK_INTERVAL=30

# AI Settings
OPENAI_API_KEY=your-production-openai-key
AZURE_OPENAI_ENDPOINT=your-production-azure-openai-endpoint
AZURE_OPENAI_KEY=your-production-azure-openai-key