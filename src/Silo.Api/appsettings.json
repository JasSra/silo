{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MinIO": "localhost:9000",
    "OpenSearch": "http://localhost:9200",
    "Redis": "localhost:6379",
    "Database": "Host=localhost;Port=5432;Database=silo_dev;Username=dev;Password=devpassword"
  },
  "MinIO": {
    "AccessKey": "dev",
    "SecretKey": "devpassword",
    "BucketName": "files",
    "UseSSL": false
  },
  "OpenSearch": {
    "IndexName": "files",
    "NumberOfShards": 1,
    "NumberOfReplicas": 0
  },
  "Pipeline": {
    "MaxConcurrentSteps": 3,
    "StepTimeout": "00:10:00",
    "ContinueOnStepFailure": false,
    "CriticalSteps": ["MalwareScanning"],
    "StepConfiguration": {
      "MalwareScanning": {
        "Enabled": true,
        "Order": 100
      },
      "FileStorage": {
        "Enabled": true,
        "Order": 200
      },
      "ThumbnailGeneration": {
        "Enabled": true,
        "Order": 300
      },
      "FileIndexing": {
        "Enabled": true,
        "Order": 400
      },
      "FileVersioning": {
        "Enabled": true,
        "Order": 500
      }
    }
  },
  "ClamAV": {
    "Host": "localhost",
    "Port": 3310,
    "QuarantineInfectedFiles": true,
    "QuarantinePath": "/data/quarantine",
    "ScanTimeout": "00:05:00"
  },
  "Authentication": {
    "JwtSecretKey": "your-super-secret-jwt-key-that-should-be-at-least-32-characters-long",
    "JwtIssuer": "Silo.Api",
    "JwtAudience": "Silo.Client",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 30,
    "RequireEmailConfirmation": false,
    "MaxFailedLoginAttempts": 5,
    "LockoutDurationMinutes": 30,
    "EnableTwoFactorAuth": false
  },
  "FileSync": {
    "MonitoredPaths": [
      "C:\\temp\\silo-sync"
    ],
    "IncludeSubdirectories": true,
    "MaxFileSizeBytes": 1073741824,
    "ExcludePatterns": [".tmp", ".temp", "~", ".git", "node_modules"],
    "IncludeExtensions": [],
    "SyncDelaySeconds": 5
  },
  "Versioning": {
    "EnableVersioning": true,
    "AutoVersionOnChange": true,
    "VersionStorageBucket": "versions",
    "GenerateDiffs": true,
    "MaxDiffSizeBytes": 10485760,
    "CompressVersions": true,
    "ExcludedFileTypes": [".tmp", ".temp", ".log"],
    "RetentionPolicy": {
      "MaxVersionsPerFile": 10,
      "MaxVersionAge": "30.00:00:00",
      "MaxTotalVersionSizeBytes": 0,
      "KeepMajorVersions": true,
      "AutoCleanup": true
    }
  },
  "Thumbnails": {
    "EnableThumbnailGeneration": true,
    "GenerateSizes": ["Small", "Medium", "Large"],
    "OutputFormat": "Jpeg",
    "Quality": 85,
    "ResizeMode": "Max",
    "ThumbnailBucket": "thumbnails",
    "DeleteThumbnailsOnFileDelete": true,
    "MaxImageSizeBytes": 52428800
  },
  "Backup": {
    "DefaultBackupBucket": "backups",
    "MaxConcurrentBackups": 3,
    "BackupTimeout": "04:00:00",
    "DefaultRetentionPolicy": {
      "MaxBackupCount": 7,
      "MaxAge": "30.00:00:00",
      "MaxTotalSizeBytes": 107374182400
    }
  },
  "AI": {
    "Enabled": false,
    "Provider": "None",
    "MaxFileSizeForAnalysis": 10485760,
    "SupportedMimeTypes": [
      "text/plain",
      "text/csv", 
      "text/json",
      "text/xml",
      "application/pdf",
      "application/json",
      "application/xml",
      "image/jpeg",
      "image/png", 
      "image/gif",
      "image/bmp",
      "application/msword",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document"
    ],
    "OpenAI": {
      "ApiKey": "",
      "Model": "gpt-4-vision-preview",
      "TextModel": "gpt-4",
      "BaseUrl": "https://api.openai.com/v1",
      "MaxTokens": 1000,
      "Temperature": 0.1
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "llama3",
      "VisionModel": "llava",
      "MaxTokens": 1000,
      "Temperature": 0.1
    }
  }
}
