# Example configuration for Google to Silo Sync
# Copy this to config.env and customize for your setup

# Silo Configuration
SILO_SERVER_URL=http://localhost:5000
SILO_BUCKET=files

# Google OAuth Configuration
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_DRIVE_TOKEN_PATH=token_drive.json
GOOGLE_PHOTOS_TOKEN_PATH=token_photos.json

# Sync Configuration
SERVICES=drive,photos  # Comma-separated: drive, photos
NUM_WORKERS=3          # Number of parallel upload threads
MAX_RETRIES=5          # Maximum upload retry attempts

# State Database
STATE_DB_PATH=google_sync_state.db

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=google_sync.log
